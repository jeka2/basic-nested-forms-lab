<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.fields_for :ingredients do |rb| %>
        <%= rb.label :name %>
        <%= rb.text_field :name %>
        <%= rb.label :quantity %>
        <%= rb.text_field :quantity %>
    <% end %>

    <%= f.submit %>
<% end %>